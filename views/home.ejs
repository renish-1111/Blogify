<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Blogify</title>
    <%- include('./partials/head') %>
</head>

<body>
    <%- include('./partials/navbar') %>

        <div class="container">
            <div class="row row-cols-3 justify-content-lg-around ">

                <% blogs.forEach(blog=> { %>
                    <div class="card my-3" style="width: 22rem;">
                        <img class='mt-3' src="<%= blog.coverImageURL%>" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= blog.title %>
                            </h5>
                            <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>

        <%- include('./partials/script') %>
</body>

</html>