<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Blogify</title>
    <%- include('./partials/head') %>
</head>

<body>
    <%- include('./partials/navbar') %>

        <div class=" container mt-4">
            <img src="<%= blog.createdBy.profileImg %>" style="width: 50px;" alt="" srcset="">
            <span class="m-2">Created by: <%= blog.createdBy.fullName %></span>
        </div>
        <div class="container">

            <div class="text-center m-3">
                <h1>
                    <%= blog.title %>
                </h1>

            </div>
            <div class="text-center">
                <img src="<%= blog.coverImageURL %>" style="width: 40vw;" alt="" srcset="">
            </div>

            <pre class="m-3""> <%= blog.body %> </pre>
        </div>
        
        <% if (locals.user) { %>
            <h1>Write a comment</h1>
            <div class=" container mt-5">
                <form class="mb-3" method="post" action='/blog/comment/<%= blog._id %>'>
                    <input type="text" name="content" class="form-control" id="comment" placeholder="Enter your comment">
                    <button type="submit" class="btn btn-primary mt-3">ADD</button>
                </form>
            </div>
            
            <% } %>
            <div class="container ">
                <h1>Comments (<%= comment.length %>)</h1>
                <% comment.forEach(comment => { %>
                    <div class="border p-2 my-3">

                        <img src="<%= comment.createdBy.profileImg %>" style="width: 50px;" alt="" srcset="">
                        <span> <%= comment.createdBy.fullName %> </span>
                        <pre class="m-3"> <%= comment.content %> </pre>
                    </div>
            <% }) %>
        </div>



        <%- include('./partials/script') %>
</body>

</html>